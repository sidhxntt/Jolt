generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  // Required fields
  email    String @unique
  password String

  // Optional fields
  first_name String?
  last_name  String?
  username   String? @unique
  phone      String? @unique
  role       String? @default("superadmin")
  status     String? @default("active")

  // DateTine Fields
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  account Account?
  profile Profile?
}

model Account {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @unique @db.ObjectId
  first_name String
  dob        DateTime
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Profile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique @db.ObjectId
  username  String?
  bio       String?
  urls      String[]
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  status    String
  label     String
  priority  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}