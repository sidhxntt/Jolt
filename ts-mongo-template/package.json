{
  "name": "ts-mongo-template",
  "version": "1.0.0",
  "main": "server.ts",
  "license": "MIT",
  "scripts": {
    "seed": "npx prisma generate && ts-node prisma/seeding/data.ts",
    "build": "tsc",
    "dev:server": "npx prisma generate && nodemon --exec ts-node ./src/server.ts",
    "dev:worker:email": "nodemon --exec ts-node ./src/utils/workers/email.ts",
    "dev:worker:sms": "nodemon --exec ts-node ./src/utils/workers/sms.ts",
    "prod:server": "npx prisma generate && pm2-runtime start ecosystem.config.js",
    "dockerise": "docker compose up",
    "ngrok": "npx ngrok http 8000"
  },
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@prisma/client": "^5.18.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.34.10",
    "crypto-js": "^4.2.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "http-graceful-shutdown": "^3.1.14",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "prom-client": "^15.1.3",
    "ts-node": "^10.9.2",
    "twilio": "^5.4.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-strategy": "^0.2.38",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.4",
    "prisma": "^5.18.0",
    "typescript": "^5.5.4"
  }
}
